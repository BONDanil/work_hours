<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <h5 class="mb-1">Day (<%= @day.date.to_fs(:short) %>)</h5>
      <p class="text-secondary mb-0">Total: <%= @day.total_hours_str %></p>
    </div>
    <div>
      <%= link_to 'Delete day', week_day_path(@day.week, @day), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger"  %>
    </div>
  </div>
  <div class="card-body">
    <ul class="list-group mb-4">
      <% @day.time_ranges.each do |time_range| %>
        <li class="list-group-item">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <%= time_range.schedule_str  %>
            </div>
            <div class="d-flex">
              <div class="me-3">
                <%= link_to 'Edit time range', edit_week_day_time_range_path(@day.week, @day, time_range), class: 'btn btn-primary' %>
              </div>
              <div>
                <%= link_to 'Delete', week_day_time_range_path(@day.week, @day, time_range), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to 'Add time range', new_week_day_time_range_path(@day.week, @day), class: 'btn btn-success' %>
  </div>
</div>

<%= link_to 'Back to week', edit_week_path(@day.week), class: 'btn btn-primary' %>